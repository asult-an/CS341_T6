<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FlavorFlaveProto"
             x:Class="FlavorFlaveProto.AddRecipeIngredientsPage"
             Title="Recipes">
    
    <!-- Define mock data in a ResourceDictionary -->
    <!--<ContentPage.Resources>
        <ResourceDictionary>
            <x:Array x:Key="arrIngredients" x:Name="mockIngredients" Type="{x:Type x:String}">
